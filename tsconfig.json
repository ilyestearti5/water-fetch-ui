{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": false,
    "emitDeclarationOnly": true,
    "outDir": "./dist", // Ensure this matches where you want the types to go
    "skipLibCheck": true,
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "api/*": ["src/apis/*"],
      "assets/*": ["src/assets/*"],
      "Components/*": ["src/components/*"],
      "database/*": ["src/data/db/*"],
      "hooks/*": ["src/hooks/*"],
      "main/*": ["./*"],
      "models/*": ["src/data/*"],
      "utils/*": ["src/utils/*"]
    }
  },
  "include": ["./src"],
  "references": []
}
