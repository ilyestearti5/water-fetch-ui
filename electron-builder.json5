/**
 * @see https://www.electron.build/configuration/configuration
 */
{
  appId: "csm.app",
  asar: true,
  directories: {
    output: "release/${version}",
  },
  files: ["dist-electron", "dist", "**/*"],
  linux: {
    category: "Utility",
    artifactName: "${productName}.${ext}",
    icon: "src/assets/images/empty-box-checked.png",
  },
  mac: {
    artifactName: "${productName} Setup ${version}.${ext}",
    icon: "src/assets/images/icon-xl.ico",
  },
  win: {
    target: [
      {
        target: "nsis",
        arch: ["x64"],
      },
    ],
    artifactName: "${productName} Setup ${version}.${ext}",
    icon: "src/assets/images/icon-xl.ico",
  },
  nsis: {
    oneClick: false,
    perMachine: true,
    allowToChangeInstallationDirectory: true,
    deleteAppDataOnUninstall: false,
    installerIcon: "src/assets/images/icon-xl.ico",
    uninstallerIcon: "src/assets/images/icon-xl.ico",
    license: "LICENSE.md",
  },
  publish: {
    provider: "generic",
    channel: "latest",
    url: "https://github.com/electron-vite/electron-vite-react/releases/download/v0.9.9/",
  },
}
